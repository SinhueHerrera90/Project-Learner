<div>
  <div>
    <h1>
      List of all locations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new location
    </h2>

    <form action="/insert_location" method="post">
      <div>
        <label for="activity_id_box">
          Activity
        </label>

        <input type="text" id="activity_id_box" name="query_activity_id">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <button>
        Create location
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Activity
        </th>

        <th>
          Address
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_locations.each do |a_location| %>
      <tr>
        <td>
          <%= a_location.id %>
        </td>

        <td>
          <%= a_location.activity_id %>
        </td>

        <td>
          <%= a_location.address %>
        </td>

        <td>
          <%= time_ago_in_words(a_location.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_location.updated_at) %> ago
        </td>

        <td>
          <a href="/locations/<%= a_location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
