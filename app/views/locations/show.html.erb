<div>
  <div>
    <h1>
      Location #<%= @the_location.id %> details
    </h1>

    <div>
      <div>
        <a href="/locations">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_location/<%= @the_location.id %>">
          Delete location
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Activity
      </dt>
      <dd>
        <%= @the_location.activity_id %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_location.address %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_location.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_location.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit location
    </h2>

    <form action="/modify_location/<%= @the_location.id %>"  method="post" >
      <div>
        <label for="activity_id_box">
          Activity
        </label>

        <input type="text" id="activity_id_box" name="query_activity_id" value="<%= @the_location.activity_id %>">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" value="<%= @the_location.address %>">
      </div>

      <button>
        Update location
      </button>
    </form>
  </div>
</div>

<hr>
