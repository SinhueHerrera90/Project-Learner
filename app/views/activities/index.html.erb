<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_activities.each do |an_activity| %>
      <tr>
        <td>
          <%= an_activity.id %>
        </td>

        <td>
          <%= an_activity.category_id %>
        </td>

        <td>
          <%= an_activity.name %>
        </td>

        <td>
          <%= an_activity.description %>
        </td>

        <td>
          <%= an_activity.location_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_activity.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_activity.updated_at) %> ago
        </td>

        <td>
          <a href="/activities/<%= an_activity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

