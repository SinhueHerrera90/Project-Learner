<div>
  <div>
    <h1>
      Review #<%= @the_review.id %> details
    </h1>

    <div>
      <div>
        <a href="/reviews">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_review/<%= @the_review.id %>">
          Delete review
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Activities
      </dt>
      <dd>
        <%= @the_review.activities_id %>
      </dd>

      <dt>
        Content
      </dt>
      <dd>
        <%= @the_review.content %>
      </dd>

      <dt>
        Enrollment
      </dt>
      <dd>
        <%= @the_review.enrollment_id %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @the_review.location_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_review.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_review.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit review
    </h2>

    <form action="/modify_review/<%= @the_review.id %>"  method="post" >
      <div>
        <label for="activities_id_box">
          Activities
        </label>

        <input type="text" id="activities_id_box" name="query_activities_id" value="<%= @the_review.activities_id %>">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content"><%= @the_review.content %></textarea>
      </div>

      <div>
        <label for="enrollment_id_box">
          Enrollment
        </label>

        <input type="text" id="enrollment_id_box" name="query_enrollment_id" value="<%= @the_review.enrollment_id %>">
      </div>

      <div>
        <label for="location_id_box">
          Location
        </label>

        <input type="text" id="location_id_box" name="query_location_id" value="<%= @the_review.location_id %>">
      </div>

      <button>
        Update review
      </button>
    </form>
  </div>
</div>

<hr>
